@model MvcMovie.NLayerApp.WEB.Models.MovieQualityAndReleaseYearViewModel

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <h1>Index</h1>

    <p>
        <a asp-action="Create">Create New</a>
    </p>

</div>

<center>
    <hr />
    <form asp-controller="Movies" asp-action="Index" method="get">
        <!--<s5221>-->Сортировать по
        <!--</s>-->: <select asp-for="MovieQuality" asp-items="Model.Qualities" class="select_filter"
                             onchange="this.form.submit()">
            <option value="" style="color:#A3A3A3;">- Качество -</option>
        </select>
        · <select asp-for="MovieReleaseYear" asp-items="Model.ReleaseYears" class="select_filter"
                  onchange="this.form.submit()">
            <option value="" style="color:#A3A3A3;">- Год -</option>
        </select>
    </form>
    <hr />
    <hr />
    <span class="sortBlock23">
        <div id="movies">
            @foreach (var item in Model.Movies)
            {
                string fullTitle = item.Title + " (" + item.ReleaseDate.Year + ") " + item.Quality;
                string posterTitle = "Poster" + fullTitle;
                <div class="item-1">
                    <div class="blockItem shortstory">
                        <div class="shortstoryImg">

                            <div class="triangle-topleft-new"><span>@Html.DisplayFor(modelItem => item.Quality)</span></div>
                            <a asp-action="Details" asp-route-id="@item.Id">
                                <img title=@posterTitle
                                     src="~/images/filler.jpg">
                                <b class="short_itemTitle">
                                    <span></span>
                                </b>
                            </a><b class="short_itemTitle">
                                <a asp-action="Details"
                                   asp-route-id="@item.Id">
                                    @fullTitle
                                </a>
                            </b>
                        </div>
                        <div class="shortstory_info">
                            <div class="itemStats">
                                <span class="itemStats_left">
                                    <ion-icon name="eye-outline">
                                    </ion-icon>&nbsp;999
                                </span>
                                <span class="itemStats_right">
                                    <ion-icon name="download-outline">
                                    </ion-icon>&nbsp;999
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            }


        </div>
    </span>
</center>
<script src="https://unpkg.com/ionicons@5.4.0/dist/ionicons.js"></script>